@model AddAccountViewModel
@{
    ViewData["Title"] = "AddAccount";
}
@Html.Partial("BackButtonPartial")
<h2>Add Account</h2>
<div asp-validation-summary="All"></div>
<form asp-action="AddToAccount" asp-controller="Account" method="post">
    <input type="hidden" asp-for="CustomerId" value="@Model.CustomerId" />
    <div class="form-group">
        <label asp-for="AccountType"></label>
        <div><span asp-validation-for="AccountType"></span></div>
        <select class="form-control" asp-for="AccountType">
            <option></option>
            @foreach (Accounttypes type in Model.AccountTypes)
            {
                <option value="@type.Typeid">@type.Typename</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BranchId"></label>
        <div><span asp-validation-for="BranchId"></span></div>
        <select class="form-control" asp-for="BranchId">
            <option></option>
            @foreach (Bankbranch branch in Model.Branches)
            {
                <option value="@branch.Branchid">@branch.Branchname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <div><span asp-validation-for="EmployeeId"></span></div>
        <select class="form-control" asp-for="EmployeeId">
            <option></option>
            @foreach (Bankemployee employee in Model.Employees)
            {
                <option value="@employee.Empid">@employee.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="InitialAmount"></label>
        <div><span asp-validation-for="InitialAmount"></span></div>
        <input type="number" asp-for="InitialAmount" min="500" placeholder="0.00" value="500" step="0.01" title="Currency"/>
    </div>
    <button type="submit" class="btn btn-secondary btn-info">Add</button>
    <button type="reset" class="btn btn-secondary btn-danger">Cancel</button>
</form>