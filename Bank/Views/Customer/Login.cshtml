
@{
    ViewData["Title"] = "Login";
}
@Html.Partial("BackButtonPartial")
<h2>Login</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-danger mt-1 text-danger">@TempData["message"]</div>
}

<form asp-action="Customer" asp-controller="Customer" method="post">
    <label for="userName">
        Name:
    </label>
    <input type="text" name="userName" /><br /><br />
    <label for="password">Password: </label>
    <input type="password" name="password" /><br /><br />
    <button class="btn btn-sm btn-success" type="submit">Enter</button>
    <button class="btn btn-sm btn-success" type="reset">Clean</button>
</form>